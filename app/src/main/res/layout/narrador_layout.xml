<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:background="@color/fondo"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/img_logo_og"/>

    <TextView
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Si desitja mantenir el narrador de text llisca a l`esquerra, en cas contrari cap a la dreta "
        android:textAlignment="center"
        android:textSize="22sp"
        android:fontFamily="@font/poppinsregular"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animDeslizarDedo"
        android:layout_width="163dp"
        android:layout_height="149dp"
        android:layout_marginTop="40dp"
        android:visibility="visible"
        app:lottie_autoPlay="false"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/animdeslizardedo"
        tools:ignore="MissingClass" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/imgMicro"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_micro" />

        <ImageView
            android:id="@+id/imgMicroMute"
            android:layout_marginLeft="180dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_micro_mute" />

    </LinearLayout>

</LinearLayout>