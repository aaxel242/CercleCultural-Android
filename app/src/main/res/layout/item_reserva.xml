<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/fondo">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Encabezado -->
            <TextView
                android:id="@+id/tvTipoReserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/worksansvariablefontwght"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Detalles comunes -->
            <TextView
                android:id="@+id/tvFechaReserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/worksansvariablefontwght"
                android:textColor="@android:color/black"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/worksansvariablefontwght"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Detalles específicos -->
            <LinearLayout
                android:id="@+id/layoutEspacio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvFechaInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/worksansvariablefontwght"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvFechaFin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/worksansvariablefontwght"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvPlazas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/worksansvariablefontwght"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <!-- Botón Cancelar -->
            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar Reserva"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/worksansvariablefontwght"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/azul"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>